/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/*单行超出制定的范围截取内容病添加....*/
/*通用功能一截取过长字符串...*/
.ell{
  overflow:hidden;/*溢出隐藏*/
  white-space:nowrap;/*不允许换行*/
  text-overflow:ellipsis;/*超出部分添加。。。*/
}
.name{
  margin-left: 30rpx;
  font-size: 26rpx;
  padding-top: 10rpx;
}
.price{
  font-size: 24rpx;
  color:rgb(236, 14, 51);
}
.stock{
  font-size: 24rpx;
  color: #aaa;
  margin-left: 10px;
}
/*通用功能二：灰色分隔块儿*/
.divider{
  height: 30rpx;
  background: #f1f1f1;
}
/*通用箭头*/
.cell{
  background-color:#fff;
  font-size:16px;
}
.cell-item{
  padding:20rpx 30rpx;
  border-bottom:1rpx solid #ddd;
}
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arrow::after{
  content: "";
  width: 15rpx;
  height: 15rpx;
  border-top: 3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg);
}