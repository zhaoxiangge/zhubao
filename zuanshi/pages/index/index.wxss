/**index.wxss**/
page{
  background: #fff;
}
.slider,.slider image,.slider swiper{
  width:100%;
  height:550rpx;
}
.cnt{
  display:flex; 
}
.search{
  font-size: 28rpx;
  background: #f1f1f1;
  width: 85%;
  border-radius: 8rpx;
  margin: 20rpx;
}
.cnt1{
  width:40rpx;
  height: 40rpx;
}
.cnt2{
  font-size: 15rpx;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  display:flex;
}
.index-nav{
  background: #f7f7f7;
  display:flex;
  flex-wrap:wrap;
  margin-bottom: 40rpx;
}
.nav-item{
  display:flex;
  width:25%;
  height:200rpx;
  box-sizing:border-box;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 28rpx;
}
.nav-item image{
  width:102rpx;
  height:102rpx;
}
.index-line{
  height: 10rpx
}
.index-line1{
  width: 90%;
  height: 4rpx;
  margin: 4rpx auto;
  background: #000;
}
.index-line2{
  width: 90%;
  height: 1rpx;
  margin: 0 auto;
  background: #000;
}
.divider1{
  height: 80rpx;
  background: #fff;
  text-align: center;
  line-height: 80rpx;
  font-size: 33rpx;
}
.divider2{
  height: 80rpx;
  background: #eee;
  text-align: center;
  line-height: 80rpx;
  font-size: 33rpx;
}
.index-nav1{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.index-nav1 image{
height: 320rpx;
width: 675rpx;
}
.nav1-item {
  margin-bottom: 15rpx;
}
.index-nav2{
  margin: 40rpx 40rpx;
  font-size: 24rpx;
}
.index-nav2 view{
  margin-bottom: 20rpx;
}
.index-nav3{
  background: #fff;
  display:flex;
  flex-wrap:wrap;
  margin:0 auto 40rpx 0 auto;
  width: 100%;
  padding-bottom: 100rpx;
}
.nav3-item{
  display:flex;
  width:50%;
  height:500rpx;
  box-sizing:border-box;
  flex-direction: column;
  font-size: 28rpx;
  border-right: 2rpx solid #eee;
  border-bottom: 2rpx solid #eee;
}
.nav3-item image{
  width:100%;
  height:400rpx;
}
.nav-item:nth-child(2n){
  border-right: 0rpx;
}
.divider5{
  position: fixed;
  bottom: 0px;
  height: 100rpx;
  background: #fff;
  align-items: center;
  display: flex;
  justify-content: space-between;
  font-size: 33rpx;
  color: #000;
  width: 100%;
  border-top: 1rpx solid  #eee;
}
.item1{
  width: 33.333%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
}
.item1 image{
  width: 25px;
  height: 25px;
}