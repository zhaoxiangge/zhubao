/* pages/shoplist/shoplist.wxss */
/*组件白色背景*/
page{
  background-color:#fff;
}
.index-nav3{
  background: #fff;
  display:flex;
  flex-wrap:wrap;
  margin:0 auto 40rpx auto;
  width: 100%
}
.nav3-item{
  display:flex;
  width:50%;
  height:500rpx;
  box-sizing:border-box;
  flex-direction: column;
  font-size: 28rpx;
  border-right: 2rpx solid #eee;
  border-bottom: 2rpx solid #eee;
}
.nav3-item image{
  width:100%;
  height:400rpx;
}
.nav-item:nth-child(2n){
  border-right: 0rpx;
}
.divider{
  height: 80rpx;
  background: #fff;
  align-items: center;
  display: flex;
  justify-content: space-between;
  font-size: 33rpx;
  border-bottom: 1rpx solid #eee;
}
.divider view{
  width: 33.333%;
  text-align: center;
}
.divider view image{
  width: 20rpx;
  height: 20rpx;
}
.header image{
  width:100%;
  height:260rpx;


}